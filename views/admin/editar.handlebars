{{>_navbarADM}}
<div class="container">
    <h2 class="text-center">Editar categoria:</h2>
    <div class="card" style="padding: 20px;">
        {{#each erros}}
.       <div class="alert alert-danger" role="alert">
            {{texto}}
        </div>
    {{else}}
    {{/each}}
        <form action="/admin/categorias/edit" method="POST">
        <input type="hidden" name="id" value="{{categoria._id}}">
        <label for="Name">Categoria</label>
        <input type="text" name="Name" class="form-control" value="{{categoria.nome}}">
        <label for="Slug">Slug</label>
        <input type="text" name="Slug" class="form-control" value="{{categoria.slug}}">
        <br>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Editar</button>
        </div>
        </form>
    </div>
</div>