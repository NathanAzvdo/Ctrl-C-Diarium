{{>_navbarADM}}
<div class="container text-center">
    <div class="card" style="padding:10px">
    {{>_msg}}
    <a href="/admin/categorias/add"><button class="btn btn-success">Adicionar categoria</button></a>
    <hr>
    <table id="myTable" class="display">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Slug</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each categorias}}
            <tr>
                <td>{{nome}}</td>
                <td>{{slug}}</td>
                <td>
                    <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar</button></a>
                    <a href="/admin/categorias/remove/{{_id}}"><button class="btn btn-danger">Excluir</button></a>

                </td>
            </tr>
        {{else}}
        {{/each}}
    </tbody>
</table>
    </div>

</div>
    
